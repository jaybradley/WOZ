      TTSPlayer.AttachCtrl(CrazyTalkPlayer);
      function play(str){
	      document.TTSPlayer.TextContent=str;
	      document.TTSPlayer.Play();
      }

      function stop(){
	      document.TTSPlayer.Stop();
      }
