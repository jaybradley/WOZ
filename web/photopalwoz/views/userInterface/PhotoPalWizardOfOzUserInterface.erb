       var photoViewerFlashVars = {
        user_or_wizard: "<%= params["user_or_wizard"] %>",
        session_name: "<%= params["session_name"] %>"
       };
       var params = {
          allowFullScreen: "true",
          allowScriptAccess: "sameDomain"
       };
     
      swfobject.embedSWF("<%= params["chat_swf_path"] %>", "chat_swf", "500", "300", "10.0.0", "playerProductInstall.swf", chatFlashVars, params);
